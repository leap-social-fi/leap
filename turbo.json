{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["NODE_ENV", "MODE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "format": {},
    "check": {},
    "types": {},
    "start": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
