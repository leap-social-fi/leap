{
  "name": "@leap/shared",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./constants/*": "./src/constants/*.ts",
    "./types/*": "./src/types/*.ts",
    "./schema/*": "./src/schema/*.ts",
    "./utils/*": "./src/utils/*.ts",
    "./libs/*": "./src/libs/*.ts"
  },
  "scripts": {
    "build": "bunx --bun tsc --build && bunx --bun tsc-alias -p tsconfig.app.json",
    "dev": "bunx --bun concurrently --kill-others \"tsc --build --watch --preserveWatchOutput\" \"tsc-alias -w -p tsconfig.app.json\"",
    "types": "bunx --bun tsc --noEmit",
    "lint": "biome lint ./src --write",
    "format": "biome format ./src --write",
    "check": "biome check ./src --write"
  },
  "dependencies": {
    "@tiptap/core": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "hono": "^4.11.7",
    "image-size": "^2.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@leap/typescript-config": "workspace:*",
    "@types/node": "^25.2.3",
    "concurrently": "^9.2.1",
    "tsc-alias": "^1.8.16"
  }
}