{
  "name": "leap",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bunx --bun turbo run dev",
    "dev:frontend": "bunx --bun turbo run dev --filter=frontend --filter=@leap/shared",
    "dev:backend": "bunx --bun turbo run dev --filter=backend --filter=@leap/shared",
    "build": "bunx --bun turbo run build",
    "build:frontend": "bunx --bun turbo run build --filter=frontend --filter=@leap/shared",
    "build:backend": "bunx --bun turbo run build --filter=backend --filter=@leap/shared",
    "start": "bunx --bun turbo run start",
    "lint": "bunx --bun turbo run lint",
    "lint:frontend": "bunx --bun turbo run lint --filter=frontend --filter=@leap/shared",
    "lint:backend": "bunx --bun turbo run lint --filter=backend --filter=@leap/shared",
    "format": "bunx --bun turbo run format",
    "format:frontend": "bunx --bun turbo run format --filter=frontend --filter=@leap/shared",
    "format:backend": "bunx --bun turbo run format --filter=backend --filter=@leap/shared",
    "check": "bunx --bun turbo run check",
    "check:frontend": "bunx --bun turbo run check --filter=frontend --filter=@leap/shared",
    "check:backend": "bunx --bun turbo run check --filter=backend --filter=@leap/shared",
    "types": "bunx --bun turbo run types",
    "types:frontend": "bunx --bun turbo run types --filter=frontend --filter=@leap/shared",
    "types:backend": "bunx --bun turbo run types --filter=backend --filter=@leap/shared",
    "postinstall": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "@types/node": "^25.0.10",
    "lefthook": "^2.0.15",
    "turbo": "^2.7.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@tiptap/extensions": "^3.18.0",
    "i": "^0.3.7",
    "npm": "^11.8.0"
  }
}
